from random import randint
print("How Many Dice?:")
x = int(input())  
for _ in range(x):
    die_face = randint(1, 6)
    if die_face == 1:
        print("-------------")
        print("|           |")
        print("|     x     |")
        print("|           |")
        print("-------------")
    if die_face == 2:
        print("-------------")
        print("| x         |")
        print("|           |")
        print("|         x |")
        print("-------------")
    if die_face == 3:
        print("-------------")
        print("| x         |")
        print("|     x     |")
        print("|         x |")
        print("-------------")
    if die_face == 4:
        print("-------------")
        print("| x       x |")
        print("|           |")
        print("| x       x |")
        print("-------------")
    if die_face == 5:
        print("-------------")
        print("| x       x |")
        print("|     x     |")
        print("| x       x |")
        print("-------------")
    if die_face == 6:
        print("--------------")
        print("| x        x |")
        print("| x        x |")
        print("| x        x |")
        print("--------------")
